# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/smscrm
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=smscrm

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API
PORT=3000
API_BASE_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3001
COOKIE_SECRET=change-this-secret-in-production

# Session Management (Redis-backed sessions)
SESSION_SECRET=change-this-to-32-plus-character-secret-in-production
SESSION_TTL=86400  # 24 hours in seconds

# Rate Limiting
RATE_LIMIT_MAX=100  # Max requests per window
RATE_LIMIT_WINDOW_MS=60000  # Window duration in milliseconds (1 minute)
TENANT_RATE_LIMIT_MAX=100  # Per-tenant max requests per window
TENANT_RATE_LIMIT_WINDOW_MS=60000  # Per-tenant window duration

# Webhook Security
WEBHOOK_SECRET=change-this-webhook-secret-in-production  # Secret for generic webhook signature verification
WEBHOOK_REPLAY_PROTECTION_TTL=300  # Replay protection window in seconds (default: 5 minutes)
WEBHOOK_TIMESTAMP_MAX_AGE=300  # Maximum webhook age in seconds (default: 5 minutes)

# Worker
WORKER_PORT=3002

# Shortener
SHORTENER_PORT=3003
SHORT_DOMAIN=sms.link
SHORT_LINK_SECRET=change-this-secret-in-production

# Twilio (SMS Provider)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_FROM_NUMBER=+61400000000

# Web
NEXT_PUBLIC_API_URL=http://localhost:3000
WEB_URL=http://localhost:3001

# Logging
LOG_LEVEL=info
